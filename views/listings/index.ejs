<% layout("/layouts/boilerplate") %>
<body>
  <p style="text-align: center; margin-top: 1rem;"><%= successMsg %></p>
    <h3>All Listings</h3>
  
    <div class="all-listings row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for(let listing of allListings) { %>
            <a href="/listings/<%= listing._id %>" class="listing-link">
                <div class="card listing-card" style="width: 100%">
                    <img class="card-img-top mb-2" src="<%= listing.image %>" alt="Listing Image" style="height: 20rem">
                    <div class="card-img-overlay"></div>

                    <div class="card-body">
                      <p class="card-text">
                        <b><%= listing.title %></b><br>
                        <b> &#8377 <%= listing.price != null ? listing.price.toLocaleString("en-IN") : "N/A" %></b> / night <br>
                        <%= listing.location %>, <%= listing.country %>
                      </p>
                    </div>
                  </div>
            </a>
            
        <% } %>
    </div>
</body>
