<% layout("/layouts/boilerplate") %>

<div class="row mt-5">
    <div class="col-6 offset-1">
        <h1>Sign Up on Jet Set Globe</h1> <br><br>
        <form method="POST" action="/signup" class="needs-validation" novalidate> <!-- novalidate: This disables the browser default feedback tooltips and uses Bootstrap's custom feedback styles-->
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input name="username" id="username" type="text" placeholder="Enter username" class="form-control" required>
                <div class="valid-feedback">Looks good!</div>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input name="email" id="email" type="email" placeholder="Enter email" class="form-control" required>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input name="password" id="password" type="password" placeholder="Enter password" class="form-control" required>
            </div>

            <button class="btn signup-btn">Sign Up</button>
        </form>
    </div>
</div>