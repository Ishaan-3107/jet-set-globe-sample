<% layout("/layouts/boilerplate") %>

<div class="row mt-5">
    <div class="col-6 offset-1">
        <h1>Log In</h1> <br><br>
        <form method="POST" action="/login" class="needs-validation" novalidate> <!-- novalidate: This disables the browser default feedback tooltips and uses Bootstrap's custom feedback styles-->
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input name="username" id="username" type="text" placeholder="Enter your username" class="form-control" required>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input name="password" id="password" type="password" placeholder="Enter your password" class="form-control" required>
            </div>

            <button class="btn login-btn signup-btn">Log In</button>
        </form>
    </div>
</div>